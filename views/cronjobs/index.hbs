<h1>Cronjobs</h1>

<div class="col-sm-12 col-md-6 col-lg-4 ">

    <div class="panel panel-primary">
        <div class="panel-heading">Cronjob</div>
        <div class="panel-body">Project
            <div class="pull-right">42</div>
        </div>
        <div class="panel-body">Clean up MongoDB
            <div class="pull-right">Time: 01:00</div>
        </div>
        <div class="panel-body">Running <label class="pull-right switch">
            <input type="checkbox">
            <span class="slider round"></span>
        </label></div>
    </div>

</div>


<div class="col-sm-12 col-md-6 col-lg-4 ">


    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">
        New Cronjob
    </button>

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">New Cronjob</h4>
                </div>
                <div class="modal-body">

                    <select>
                        <option value="mongo">MongoDB</option>
                        <option value="pg">PostgreSQL</option>
                    </select>

                    <select>
                        <option value="cleanDatabase">Clean up databases</option>
                    </select>

                    <button class="btn btn-primary pull-right">OK</button>

                    <select class="pull-right">
                        <option value="time">00:00</option>
                        <option value="time">01:00</option>
                        <option value="time">...</option>
                    </select>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close
                    </button>
                </div>
            </div>

        </div>
    </div>

</div>