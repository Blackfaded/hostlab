extends layouts/main

block content
    .row
        .col-md-12
            if (message.error)
                .alert.alert-danger
                    p= message.error
            if (message.info)
                .alert.alert-success
                    p= message.info
            .box.box-info
                .box-header.with-border
                    a(href=link)
                        h3.box-title= 'Welcome to Hostlab!'
                .box-body
                    | This page will feature a manual to help you get started easily.
