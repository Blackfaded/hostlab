extends layouts/main
include mixins/box2

block content
    h1 Node.js Applications
    .row
        .col-md-12
            if (message.error)
                .alert.alert-danger
                    p= message.error
            if (message.info)
                .alert.alert-success
                    p= message.info
    .row
        .col-md-12
            if (repositories)
                each repo in repositories 
                    .col-sm-6.col-lg-3
                        +box2(`${repo.name}`, [`Status: ${/*app.status*/'Running'}`] , '#')
