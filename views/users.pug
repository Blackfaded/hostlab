extends layouts/main

mixin toggleIcon(state)
    span
        if state
            i.text-green.fas.fa-check-circle
        else
            i.text-red.fas.fa-times-circle

block content
    .panel.panel-default
        table.table.table-striped
            thead: tr
                th E-Mail
                th Active
                th Admin
            for user in users
                tr.user(data-id=user._id)
                    td: a(href="/admin/users/" + user._id)= user.email
                    td: +toggleIcon(user.isActive)
                    td: +toggleIcon(user.isAdmin)