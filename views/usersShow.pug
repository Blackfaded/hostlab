{{#with user}}
    <div class="panel panel-default">
    <div class="panel-heading">
    <a class="btn btn-default" href="/admin/users">&laquo; BACK</a>
    <a class="btn btn-warning" href="/admin/users/{{id}}/edit">EDIT</a>
    <button class="btn btn-danger" id="user-delete">DESTROY</button>
    </div>
    <table class="table table-striped">
    <tbody>
    <tr>
    <th>E-Mail</th>
    <td>{{email}}</td>
    </tr>
    <tr>
    <th>LDAP</th>
    <td>{{isLdap}}</td>
    </tr>
    <tr>
    <th>Admin</th>
    <td>{{isAdmin}}</td>
    </tr>
    <tr>
    <th>Created</th>
    <td>{{created}}</td>
    </tr>
    <tr>
    <th>Last Login</th>
    <td>{{#if lastLogin}}{{lastLogin}}{{else}}-{{/if}}</td>
    </tr>
    </tbody>
    </table>
    </div>
    <script>
$(function() {
$('#user-delete').click(function() {
$.ajax({
type: 'DELETE',
url: '/admin/users/{{id}}',
contentType: 'application/json',
data: JSON.stringify({}),
success: function(res) {
console.log(res);
},
});
});
});
</script>
{{/with}}
