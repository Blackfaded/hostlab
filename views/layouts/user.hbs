<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>HostLab</title>

    <link rel="stylesheet" href="/assets/bootstrap-3.3.0/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/font-awesome-4.7.0/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/stylesheet.css">
    <script src="/assets/jquery-3.2.1.min.js"></script>
    <script src="/assets/bootstrap-3.3.0/bootstrap.min.js"></script>
</head>
<body>

<div id="throbber" style="display:none; min-height:120px;"></div>
<div id="noty-holder"></div>
<div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/" class="navbar-brand">
                <h1>HostLab</h1>
            </a>
        </div>
        {{#if user.isAdmin}}
            <!-- Navigation oben links -->
            <ul class="nav navbar-left top-nav">
                <li>
                    <a href="/admin" title="Click to change to admin view">
                        <i class="fa fa-fw fa-eye" aria-hidden="true"></i> View: User</a>
                </li>
            </ul>
        {{/if}}
        <!-- Navigation oben rechts -->
        <ul class="nav navbar-right top-nav">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-fw fa-user-o"></i> {{user.username}}<span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="/settings"><i class="fa fa-fw fa-gear"></i> Settings</a></li>
                    <li><a href="/logout"><i class="fa fa-fw fa-power-off"></i> Logout</a></li>
                </ul>
            </li>
        </ul>
        <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav side-nav">
                <li {{#if nav-dashboard}}class="active"{{/if}}>
                    <a href="/"><i class="fa fa-fw fa-tachometer"></i> Dashboard</a>
                </li>
                <li {{#if nav-mongodb}}class="active"{{/if}}>
                    <a href="/mongo"><i class="fa fa-database"></i> MongoDB</a>
                </li>
                <li {{#if nav-nodejs}}class="active"{{/if}}>
                    <a href="/node"><i class="fa fa-play"></i> Node.js</a>
                </li>
                <li>
                    <a href="//gitlab.local" target="_blank"><i class="fa fa-gitlab"></i> git</a>
                </li>
                <li {{#if nav-cronjobs}}class="active"{{/if}}>
                    <a href="/cronjobs"><i class="fa fa-fw fa-clock-o"></i> Cronjobs</a>
                </li>
                <li {{#if nav-help}}class="active"{{/if}}>
                    <a href="/help"><i class="fa fa-fw fa-question-circle"></i> Help</a>
                </li>
            </ul>

        </div>
        <!-- /.navbar-collapse -->
    </nav>

    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row" id="main">

                {{{body}}}

            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
    <div id="versionnumber">{{> versionnumber}}</div>
</div><!-- /#wrapper -->

</body>
</html>
